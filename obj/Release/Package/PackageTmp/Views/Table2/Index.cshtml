@model IEnumerable<Assignment1.Models.Table2>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        body {
            background-color: black;
            color: white;
            font-size: 30px;
           font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
    </style>
</head>
<body>


    <h2>Mobile Phones</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customerID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customerID)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.contactno_ }) |
                    @Html.ActionLink("Details", "Details", new { id = item.contactno_ }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.contactno_ })
                </td>
            </tr>
        }

    </table>
</body>